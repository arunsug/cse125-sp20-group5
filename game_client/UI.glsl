#ifdef VERTEX_SHADER
//#version 330 core

layout (location = 0) in vec3 Position;
//layout (location = 1) in vec3 Normal;
layout (location = 2) in vec2 Texture;

out vec2 fragTexture;

//uniform mat4 model;

////////////////////////////////////////
// Vertex shader
////////////////////////////////////////

void main()
{
	gl_Position =  vec4(Position,1);
	
	fragTexture = Texture;
}

#endif

////////////////////////////////////////////////////////////////////////////////

#ifdef FRAGMENT_SHADER
//#version 330 core

in vec2 fragTexture;

uniform sampler2D myTexture;

out vec4 fragColor;

////////////////////////////////////////
// Fragment shader
////////////////////////////////////////


void main() {
	fragColor = texture(myTexture, fragTexture);
}

#endif

